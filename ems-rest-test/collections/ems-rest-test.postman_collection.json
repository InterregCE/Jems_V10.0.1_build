				{
					"name": "create project application - invalid data",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"id": "0e30a698-a0e0-4f8e-b1cc-5dbf89bd09e6",
								"exec": [
									"pm.variables.set('project_acronym', \"test-proj-this-is-a-very-long-name\");\r",
									"\r",
									"var date = new Date();\r",
									"date.setDate(date.getDate() - 2);\r",
									"pm.variables.set('project_submissionDate', date.toISOString().split('T')[0]);\r",
									""
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"id": "783343cb-3389-4c2a-88f9-6b9fbddfd40b",
								"exec": [
									"pm.test('should fail with 422', function () {\r",
									"    pm.response.to.have.status(422);\r",
									"});\r",
									"\r",
									"pm.test('should return validation errors', function () {\r",
									"    const response = pm.response.json();\r",
									"    pm.expect(response['acronym']).to.contain('long');\r",
									"    pm.expect(response['submissionDate']).to.contain('date_in_past');\r",
									"});\r",
									""
								],
								"type": "text/javascript"
							}
						}
					],
