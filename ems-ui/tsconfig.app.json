{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@cat/api": [
        "./build/generated-sources/openapi/index.ts"
      ],
      "@common/components/*": [
        "src/app/common/components/*"
      ],
      "@common/validation/*": [
        "src/app/common/validation/*"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
