{
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "timestamp": {
        "type": "date",
        "store": true,
        "format": "date_time"
      },
      "action": {
        "type": "keyword",
        "store": true
      },
      "user": {
        "properties": {
          "email": {
            "type": "text",
            "analyzer": "email_analyzer"
          },
          "id": {
            "type": "long"
          }
        }
      },
      "project": {
        "properties": {
          "id": {
            "type": "keyword"
          },
          "customIdentifier": {
            "type": "keyword"
          },
          "name": {
            "type": "keyword"
          }
        }
      },
      "entityRelatedId": {
        "type": "long"
      },
      "description": {
        "type": "text",
        "index": false,
        "store": true
      }
    }
  },
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 2,
    "max_ngram_diff" : 50,
    "analysis": {
      "analyzer": {
        "email_analyzer": {
          "tokenizer": "standard",
          "filter": [ "mynGram" ]
        }
      },
      "filter": {
        "mynGram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 50
        }
      }
    }
  }
}
